@model Jäsenrekisteri2.Models.Login

@{
    ViewBag.Title = "This is the viewbag title!";
}

<h2>Header woo!</h2>

@using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.member_id)
        <div class="form-group">
            @Html.Label("Käyttäjänimi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placeholder = "Käyttäjänimi" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Salasana", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Salasana", Type = "password" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-offset-2">
            <label class="text-danger">
                @Html.DisplayFor(model => model.LoginMessage)
            </label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=Kirjaudu class="btn btn-default" />
            </div>
        </div>
    </div>
}

