@model Jäsenrekisteri2.Models.Login

@{
    ViewBag.Title = "Ryhmä RY - Jäsenen käyttäjän muokkaus";
}

<h3>Ryhmä RY - Oman käyttäjän muokkaus</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Olethan varuillasi muokatessasi tietojasi</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.member_id)
    @Html.HiddenFor(model => model.lastseen)



    <div class="form-group">
        @Html.Label("Sähköposti", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @minlength = "5", @maxlength = "40", @type = "email" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Etunimi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control", @minlength = "2", @maxlength = "40" } })
            @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Sukunimi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control", @minlength = "2", @maxlength = "50" } })
            @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Salasana", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @maxlength = "30" } })
            @Html.ValidationMessageFor(model => model.password, "Pidä kenttä tyhjänä, ellet halua muuttaa salasanaa!", new { @class = "text-danger" })
        </div>
    </div>
</div>
    @*<div class="hidden">
            @Html.LabelFor(model => model.user_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
            </div>
        </div>*@
    <div class="col-lg-offset-2">
        <label class="text-danger">
            @ViewBag.CreateUserError
        </label>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tallenna" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Peruuta", "Index", "Home")
</div>
